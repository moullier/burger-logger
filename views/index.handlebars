<div id = "header" class="d-flex justify-content-center">
    <img src = "/assets/img/burger.jpg" height="75" width="75">
    <h1>Burgers!</h1>
    <img src = "/assets/img/burger.jpg" height="75" width="75">
</div>

<div class = "container">
    <div class = "row">
        <div class="col-6">
            <h2>Not eaten</h2>

            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    <li>
                        {{burger_name}}
                        <button type="button" dataID="{{id}}" class="btn btn-outline-primary burgerBtn">Eat burger</button>
                    </li>
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Have been eaten</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                {{/if}}
            {{/each}}
            </ul>


        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <form>
                <div class="form-group">
                    <label for="inputBurger">New Burger Name</label>
                    <input type="text" class="form-control" id="inputBurger"  placeholder="Enter burger name">
                </div>
                <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
            </form>
        </div>
    </div>
</div>